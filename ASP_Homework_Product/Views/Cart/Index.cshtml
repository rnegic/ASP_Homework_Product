@model ASP_Homework_Product.Models.Cart

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Название позиции</th>
                <th>Количество товара в позиции</th>
                <th>Стоимость позиции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Cost * @item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Итоговая сумма: @Model.TotalPrice</p>
    <a href="#" class="btn btn-primary">оформить заказ</a>
}
else
{
    <p>корзина пуста</p>
}